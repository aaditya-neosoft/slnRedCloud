
 @model RedCloud.ViewModel.ResellerUserVM;






<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create Reseller User</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="AddResellerUser" asp-controller="ResellerUser" method="post" id="user-query-form">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">

                                    <input type="hidden" asp-for="ResellerAdminUserId" value="@Model.ResellerAdminUserId" />
                                    <div class="form-group">
                                        <label for="ResellerUserFirstName">First Name</label>
                                        <input asp-for="FirstName" class="form-control" id="ResellerUserFirstName" placeholder="Enter First Name">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>


                                    <div class="form-group">
                                        <label for="OrgAdminName">Last Name</label>
                                        <input asp-for="LastName" class="form-control" id="OrgAdminName" placeholder="Enter Last Name">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="OrganizationUserEmail">Email</label>
                                        <input asp-for="Email" class="form-control" id="EIN" placeholder="Enter EMail Address">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    @*<input type="password" asp-for="OrganizationUserPassword" value="abcd" hidden /> *@

                                  @*   <input type="hidden" asp-for="ResellerAdminUserId" value="@Model.ResellerAdminUserId" /> *@

                                    
                              

                                    




                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary ml-3" style="float:right; margin-right:20px; margin-bottom:20px;background-color:grey; border:none; width: 100px;"
                               asp-action="ViewResellerUsers" asp-controller="ResellerUser">Back</a>
                            <button type="submit" class="btn btn-primary ml-3" style="float:right; margin-bottom:20px; width: 100px;">Create</button>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>




</body>


@section Scripts {
    <partial name="_ValIdationScriptsPartial" />
    <script>

        $(document).ready(function () {
            $('#countryDropDown').change(function () {
                var countryId = $('#countryDropDown').val();


                $.ajax({
                    url: '@Url.Action("GetStateByCountryId", "Dropdown")',
                    data: { countryId: countryId },
                    type: 'GET',
                    success: function (data) {
                        $('#states').empty();
                        $('#cityDropdown').empty();
                        $('#cityDropdown').append("<option>Select a city</option>");

                        $('#states').append(data);
                    }
                });
            });



        });

        function getallCitys() {
            alert("METHOD CALLED")
            var stateId = $('#stateDropDown').val();


            $.ajax({

                url: '@Url.Action("GetCityByStateId", "Dropdown")',
                data: { stateId: stateId },
                type: 'GET',
                success: function (data) {
                    $('#cities').empty();
                    $('#cities').append(data);

                }
            });
        }




    </script>
}




 

