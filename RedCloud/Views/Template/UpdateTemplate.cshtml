@model RedCloud.ViewModel.TemplateVM;

@{
    ViewData["Title"] = "Admin User Form";
    Layout = "_Layout";
}

<style>
    .required::before {
        content: "*";
        color: red;
        margin-right: 3px;
    }

    .mandatory-message {
        color: red;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .form-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .form-group {
        flex: 1 1 48%;
        margin-bottom: 15px;
    }

        .form-group.spaced {
            margin-right: 4%;
        }

        .form-group.full-width {
            flex: 1 1 100%;
        }

    .card {
        width: 100%;
    }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100" style="background-color:white">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header bg-primary">
                <h3 class="card-title">Admin User Form</h3>
            </div>

            <form id="templateForm" asp-action="UpdateTemplate" asp-asp-controller="Template" method="post">
                <div class="card-body form-container">
                    <div class="form-group spaced">
                        <label for="TemplateName" class="required">Template Name</label>
                        <input asp-for="TemplateName" class="form-control" />
                        <span asp-validation-for="TemplateName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="MessageType" class="required">Message Type</label>
                        <select asp-for="MessageType" class="form-control">
                            <option value="">Select One</option>
                            <option value="sms">SMS</option>
                            <option value="mms">MMS</option>
                        </select>
                        <span asp-validation-for="MessageType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="TemplatePersonalization" class="required">Template Personalization</label>
                        <select asp-for="TemplatePersonalization" class="form-control">
                            <option value="">Select One</option>
                            <option value="FirstName">FirstName</option>
                            <option value="LastName">LastName</option>
                            <option value="Company">Company</option>
                            <option value="MobileNo">MobileNo</option>
                            <option value="Email">Email</option>
                            <option value="CountryId">CountryId</option>
                            <option value="Country">Country</option>
                            <option value="GroupId">GroupId</option>
                            <option value="Group">Group</option>
                            <option value="DOB">DOB</option>
                            <option value="ContactStatus">ContactStatus</option>
                            <option value="Location">Location</option>
                            <option value="Alias">Alias</option>
                            <option value="CustomField1">CustomField1</option>
                            <option value="CustomField2">CustomField2</option>
                            <option value="CustomField3">CustomField3</option>
                            <option value="CustomField4">CustomField4</option>
                            <option value="CustomField5">CustomField5</option>
                            <option value="CustomField6">CustomField6</option>
                        </select>
                        <span asp-validation-for="TemplatePersonalization" class="text-danger"></span>
                    </div>

                    <div class="form-group full-width">
                        <label for="MessageBody" class="required">Message Body</label>
                        <textarea asp-for="MessageBody" class="form-control"></textarea>
                        <span asp-validation-for="MessageBody" class="text-danger"></span>
                    </div>

                    <div class="form-group full-width">
                        <label for="TemplateURL" class="required">Template URL</label>
                        <input asp-for="TemplateURL" class="form-control" />
                        <span asp-validation-for="TemplateURL" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a type="button" asp-action="ViewTemplates" asp-controller="Template" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
