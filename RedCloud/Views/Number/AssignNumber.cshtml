@model RedCloud.Application.Features.Numbers.Commands.AssignNumberViewModel
@using RedCloud.ViewModel;
@{
    ViewData["Title"] = "AssignNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Assign Number</h3>
                    </div>
                    <form asp-action="AssignNumber" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="NumberId" />
                                        <input type="hidden" asp-for="NumberId" />


                                        <div class="form-group">
                                            <label asp-for="PhoneNumber"></label>
                                            <span class="form-control">@Model.PhoneNumber</span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="RateCenter"></label>
                                            <span class="form-control">@Model.RateCenter</span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="CountryName"></label>
                                            <span class="form-control">@Model.CountryName</span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="TypeName"></label>
                                            <span class="form-control">@Model.TypeName</span>
                                        </div>


                                        <div class="form-group">
                                            <label asp-for="StateName"></label>
                                            <span class="form-control">@Model.StateName</span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="CarrierName"></label>
                                            <span class="form-control">@Model.CarrierName</span>
                                        </div>




                                    </div>
                                    <div class="col-md-6">

                                        <div class="form-group">

                                            <label for="ResellerName">Reseller Name</label>

                                            <select asp-for="ResellerAdminUserId" class="form-control" asp-items="@ViewBag.ResellerList" required>
                                                <option value="">Select Reseller</option>
                                            </select>
                                            <span asp-validation-for="ResellerAdminUserId" class="text-danger"></span>


                                        </div>


                                        <div class="form-group">

                                            <label for="OrganizationName">OrganizationName </label>

                                            <select asp-for="OrgID" class="form-control" asp-items="@ViewBag.Orgadmin" required>
                                                <option value="">Select Organization</option>
                                            </select>
                                            <span asp-validation-for="OrgID" class="text-danger"></span>

                                        </div>

                                        <div class="form-group">

                                            <label for="AssignmentTypeName">AssignmentType </label>

                                            <select asp-for="AssignmentTypeId" class="form-control" asp-items="@ViewBag.Assignmenttype" required>
                                                <option value="">Select AssignmentType</option>
                                            </select>
                                            <span asp-validation-for="AssignmentTypeId" class="text-danger"></span>

                                        </div>


                                        <div class="form-group">
                                            <label asp-for="CampaignId" class="control-label">CampaignId</label>
                                            <select asp-for="CampaignId" class="form-control" asp-items="@(ViewBag.Campaignlist as SelectList)" required>
                                                <option value="">Select CampaignId</option>
                                            </select>

                                            <span asp-validation-for="CampaignId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group" id="datepicker">
                                            <label for="StartDate">
                                                Start Date

                                            </label>
                                            <input asp-for="StartDate" type="date" class="form-control datepicker" id="date" placeholder="Select start date" required>
                                            <span asp-validation-for="StartDate" class="text-danger"></span>

                                        </div>


                                        <div class="form-group" id="datepicker1">
                                            <label for="EndDate">End Date</label>
                                            <input asp-for="EndDate" type="date" class="form-control datepicker"
                                                   id="date2" placeholder="Select end date" required>
                                            <span asp-validation-for="EndDate" class="text-danger"></span>

                                        </div>


                                    </div>

                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary ml-3">Update</button>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Bootstrap Datepicker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Bootstrap Datepicker JS -->


    <style>
        .input-group-append {
            cursor: pointer;
        }
    </style>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>

        </script>
    }
</body>



