}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">All Rates</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12">
                <br></br>
                <div class="dt-search">
                    <a asp-action="AddRate" asp-controller="Rate" class="btn btn-primary">Add Rate</a>
                </div>

                <table id="rateTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th hidden>Rate ID</th>
                            <th>Reseller Name</th>
                            <th>Monthly Number</th>
                            <th>Users</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rate in Model)
                        {
                            <tr>
                                <td hidden>@rate.GetRateId</td>
                                <td>@rate.GetResellerName</td>
                                <td>@rate.GetMonthlyNumber</td>
                                <td>@rate.GetUsers</td>
                                <td>
                                    <a href="@Url.Action("GetRateById", "Rate", new { id = rate.GetRateId })">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <i class="fa-regular fa-pen-to-square" style="margin-left: 10px;"></i>
                                    <a href="javascript:void(0);" class="delete-btn" data-id="@rate.GetRateId" data-toggle="modal" data-target="#deleteModal">
                                        <i class="fa-solid fa-trash" style="color: red; margin-left: 10px;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this rate?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#rateTable').DataTable({
                searching: true, // Enable searching
                paging: true // Enable pagination
                // Add more options as needed
            });

            var deleteUrl = "";

            $('.delete-btn').on('click', function () {
                var rateId = $(this).data('id');
                deleteUrl = '@Url.Action("DeleteRate", "Rate")' + '?id=' + rateId;
            });

            $('#confirmDelete').on('click', function () {
                window.location.href = deleteUrl;
            });
        });
    </script>
}
