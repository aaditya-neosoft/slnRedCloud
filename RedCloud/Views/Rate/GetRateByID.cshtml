@model RedCloud.Application.Features.Rates.Queries.RateDetailVM

@{
    ViewBag.Title = "Rate Details";
}

<style>
    .custom-border {
        border: 2px solid #007bff;
        padding: 20px;
        border-radius: 5px;
        margin-top: 1cm;
        position: relative;
    }

    .header-section {
        display: flex;
        justify-content: space-around;
        align-items: center;
        margin-bottom: 1cm;
    }

    .logo-text {
        display: flex;
        align-items: center;
        background-color: white;
        padding: 10px;
        border-radius: 5px;
    }

        .logo-text img {
            margin-right: 10px;
        }

        .logo-text p {
            font-size: 24px;
            color: #007bff;
            margin: 0;
        }

    .buttons {
        display: flex;
        gap: 10px;
    }
</style>

<div class="container">
    <div class="header-section">
        <div class="logo-text">
            <img src="https://files.axshare.com/gsc/5886BD/e2/ee/cb/e2eecb648f19481093d6b12d28c3beb3/images/view_user_details/u27.svg?pageId=45d84280-2bba-453f-a23a-42e8aeab14be" alt="Rate Details Logo">
            <p><strong> Reseller Rate Detail </strong></p>
        </div>
       @*  <div class="buttons">
            <a href="@Url.Action("ViewallRates", "Rate")" class="btn btn-secondary"><i class="fa-solid fa-circle-left"></i></a>
        </div> *@
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="custom-border">
                <div class="row">
                    <div class="col-md-6 hide-column">
                        <p><strong>@Html.DisplayNameFor(model => model.RateId):</strong> @Html.DisplayFor(model => model.RateId)</p>
                        @Html.HiddenFor(x => x.RateId)
                    @* </div>
                    <div class="col-md-6"> *@
                        <p><strong>@Html.DisplayNameFor(model => model.ResellerName):</strong> @Html.DisplayFor(model => model.ResellerName)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.MonthlyNumber):</strong> @Html.DisplayFor(model => model.MonthlyNumber)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Users):</strong> @Html.DisplayFor(model => model.Users)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.InboundSMS):</strong> @Html.DisplayFor(model => model.InboundSMS)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.OutboundSMS):</strong> @Html.DisplayFor(model => model.OutboundSMS)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.InboundMMS):</strong> @Html.DisplayFor(model => model.InboundMMS)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.OutboundMMS):</strong> @Html.DisplayFor(model => model.OutboundMMS)</p>
                        <p><strong>@Html.DisplayNameFor(model => model.Type):</strong> @Html.DisplayFor(model => model.Type)</p>
                    </div>
                </div>
                <div class="text-center">
                    <a href="@Url.Action("ViewallRates", "Rate")" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#confirmDelete').click(function () {
                var rateId = '@Model.RateId';
                $.ajax({
                    url: '@Url.Action("DeleteRate", "Rate")',
                    type: 'DELETE',
                    data: { id: rateId },
                    success: function (result) {
                        window.location.href = '@Url.Action("ViewallRates", "Rate")';
                    },
                    error: function () {
                        alert('An error occurred while trying to delete the rate.');
                    }
                });
            });
        });
    </script>
}
