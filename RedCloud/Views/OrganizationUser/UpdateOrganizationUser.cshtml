@model RedCloud.ViewModel.OrganizationUserVM;





<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update Organization Admin</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="UpdateOrganizationUser" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="OrganizationAdminId" />
                                        <input type="hidden" asp-for="OrganizationUserId" />
                                        <input type="hidden" asp-for="IsActive" />
                                        

                                        <label for="OrganizationUserFirstName">First Name</label>
                                        <input asp-for="OrganizationUserFirstName" class="form-control" id="OrgName" placeholder="Enter organization name">
                                        <span asp-validation-for="OrganizationUserFirstName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="OrganizationUserLastName">Last Name</label>
                                        <input asp-for="OrganizationUserLastName" class="form-control" />
                                        <span asp-validation-for="OrganizationUserLastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="OrganizationUserEmail">Email</label>
                                        <input asp-for="OrganizationUserEmail" class="form-control" id="EIN" placeholder="Enter EIN Number">
                                        <span asp-validation-for="OrganizationUserEmail" class="text-danger"></span>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <a class="btn btn-primary ml-3" style="float:right; margin-right:20px; margin-bottom:20px;background-color:grey; border:none; width: 100px;"
                           asp-action="ViewOrganizationUsers" asp-controller="OrganizationUser">Back</a>

                        <button type="submit" class="btn btn-primary ml-3" style="float:right; margin-bottom:20px; width: 100px;">Update</button>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
 
</body>


