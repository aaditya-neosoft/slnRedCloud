 @model IEnumerable<SelectListItem>

<label for="countryDropDown" class="dropdown">Country</label>
<select id="countryDropDown" name="CountryId" class="form-control" required>
    <option value="">Select a country</option>
    @foreach (var country in Model)
    {
        <option value="@country.Value" selected="@country.Selected">@country.Text</option>
    }

</select>
<span class="text-danger" id="countryValidationMsg" style="display: none;">Please select a country</span>