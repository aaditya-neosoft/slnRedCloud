@model IEnumerable<RedCloud.Models.ResellerAdminVM>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Admin Reseller</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <div class="table-responsive"> <!-- Added table-responsive class here -->
                        <table id="dataTable" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="dataTable_info">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>CompanyName</th>
                                    <th>EIN</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var admins in Model)
                                {
                                    <tr>
                                        <td>@admins.Id</td>
                                        <td>@admins.ResellerName</td>
                                        <td>@admins.EIN</td>
                                        <td>@admins.CompanySupportEmail</td>
                                        <td>@((bool)admins.IsActive ? "Active" : "Not Active")</td>
                                        <td>
                                            <a asp-action="" asp-controller="">View</a>
                                            <a asp-action="" asp-controller="">Edit</a>
                                            <a class="delete-btn" data-id="@admins.Id" data-name="@admins.ResellerName" href="#">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" id="cancelBtn" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span id="deleteItemName"></span>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include DataTables scripts and initialize -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css"> <!-- Change to Bootstrap 4 styling -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap4.min.css"> <!-- Change to Bootstrap 4 styling -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                paging: true,
                searching: true,
                dom: 'Bfrtip', // Show only buttons
                buttons: ['copy', 'excel', 'csv', 'pdf'], // Show only these buttons
                responsive: true // Enable responsiveness
            });

            // Event listeners for delete functionality
            $('.delete-btn').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var name = $(this).data('name');
                $('#deleteItemName').text(name);
                $('#confirmDeleteBtn').attr('data-id', id);
                $('#deleteConfirmationModal').modal('show');
            });

            $('#cancelBtn').on('click', function (e) {
                $('#deleteConfirmationModal').modal('hide');
            });

            $('#confirmDeleteBtn').on('click', function () {
                var id = $(this).attr('data-id');
                $('#deleteConfirmationModal').modal('hide');
                // Call delete method using AJAX
                $.get('/ReSellerAdmin/SoftDeleteResellerAdmin/' + id)
                    .done(function (data) {
                        // Handle success
                        alert(data);
                        // Optionally, you can reload the page or update the table
                        location.reload();
                    })
                    .fail(function (xhr, status, error) {
                        // Handle errors
                        alert('Error: ' + xhr.responseText);
                    });
            });
        });
    </script>

    <style>
        /* Customize pagination button styling */
        .paginate_button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 15px;
            margin: 5px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s, box-shadow 0.3s;
            box-shadow: 0 2px 5px rgba(0, 123, 255, 0.3);
        }

            /* Customize pagination button active state styling */
            .paginate_button.active {
                background-color: #0056b3;
                box-shadow: 0 2px 5px rgba(0, 86, 179, 0.5);
            }

            /* Customize pagination button hover state styling */
            .paginate_button:hover {
                background-color: #0056b3;
                box-shadow: 0 4px 8px rgba(0, 86, 179, 0.5);
            }

            /* Optionally, customize button icons */
            .paginate_button.previous:before,
            .paginate_button.next:before {
                font-weight: bold;
            }


    </style>

}
