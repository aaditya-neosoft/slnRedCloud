@model ResellerAdminVM


<!DOCTYPE html>
<html>
<head>
    <title> Delete Reseller Admin</title>
</head>
<body>
    <h2> Delete Reseller Admin</h2>
    <form asp-action="SoftDelete" asp-controller="ResellerAdmin" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for=Id />
        <p>Are you sure you want to  delete ResellerAdmin with ID @Model?</p>
        <div>
            <button type="submit" class="btn btn-danger" name="confirmation" value="Yes">Yes</button>
            <a asp-action="Index" asp-controller="ResellerAdmin" class="btn btn-primary">No</a>
        </div>
    </form>
</body>
</html>

