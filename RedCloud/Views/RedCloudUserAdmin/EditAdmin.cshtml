@model RedCloud.Models.RedCloudUserVM

@{
    ViewData["Title"] = "Edit Admin User Form";
}

<style>
    .custom-border {
        border: 2px solid #007bff;
        padding: 20px;
        border-radius: 5px;
    }
</style>

<div class="container">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="custom-border">
                <form asp-action="EditAdmin" asp-controller="RedCloudUserAdmin" method="post">
                    <input type="hidden" asp-for="ID" value="5" />
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="abcxyz@redcloud.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MobileNumber"></label>
                        <input asp-for="MobileNumber" class="form-control" placeholder="abcxyz@redcloud.com" />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IsActive"></label>
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mr-2">Save</button>
                        <button type="button" class="btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
