@model RedCloud.ViewModel.GetByRateIdForAssignCreditVM

@* @using IEnumerable<RedCloud.Domain.Entities.AssignCredits> *@
@* @using RedCloud.ViewModel.AssignCreditByRateVM *@

@{
    // var LstCredit = ViewBag.lstCreditAssign as IEnumerable<RedCloud.Domain.Entities.AssignCredits>;
    
}

@{
    var LstCredit = ViewBag.lstCreditAssign as IEnumerable<RedCloud.Domain.Entities.AssignCredits>;
}


<style>
    .hiddenId {
        display: none;
    }
</style>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Organization Admin</h3>
                </div>               
                <!-- /.card-header -->
                <!-- form start -->
                <form asp-action="EditRate" method="post" id="user-query-form">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <p>
                                    <a class="btn btn-primary" asp-route-id="@Model.RateAssignCreditId" data-id="RateAssignCreditId" data-name="RateAssignCreditId" asp-action="AddAssignCreditByRate" asp-controller="ResellerAssignCredit"
                                       style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; float:right; margin-bottom:10px">
                                        Assign Credit
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">                                
                                <input type="hidden" class="form-control" asp-for="RateAssignCreditId">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-2"><label for="OrgID">Organization</label></div>
                                    <div class="col-md-4">
                                        <select disabled name="OrgID"
                                                asp-for="OrgID " class="form-control"
                                                asp-items="@(new SelectList(ViewBag.listOrg,"OrgID","OrgName"))">
                                            <option value="">Select Orgaization</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-md-2"><label for="TypeId">Type</label></div>
                                    <div class="col-md-4">
                                        <select disabled name="TypeId"
                                                asp-for="TypeId " class="form-control"
                                                asp-items="@(new SelectList(ViewBag.listTypes,"TypeId","TypeName"))">
                                            <option value="">Select Type</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @* lstCreditAssign *@

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="dataTable_wrapper" class="row dataTables_wrapper dt-bootstrap4">
        <div class="col-lg-12">
            <table id="dataTable" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="dataTable_info">
                <thead>
                    <tr>
                        <td>Date</td>
                        <td>Assigned Credits</td>
                        <td>Credit Type</td>
                        <td>Amount</td>
                        <td>Notes</td>
                    </tr>
                </thead>
               
                <tbody>
                    @if (LstCredit != null)
                    {
                        foreach (var credit in LstCredit)
                        {
                            <tr>
                                <td>
                                    @credit.CreditDate
                                </td>
                                <td>
                                    @credit.NoOfCredits
                                </td>
                                <td>
                                    @credit.TypeName
                                </td>
                                <td>
                                    @credit.Amount
                                </td>
                                <td>
                                    @credit.Note
                                </td>
                            </tr>
                            
                        }
                    }                   
                   
                </tbody>
            </table>
        </div>
    </div>
</div>