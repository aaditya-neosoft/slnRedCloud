@model RedCloud.ModelVM.AllOrganizationAdminVM@{    ViewData["Title"] = "ViewOrganizationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";}<style>    .custom-border {        border: 2px solid #007bff;        padding: 20px;        border-radius: 5px;        margin-top: 1cm;        position: relative;    }    .header-section {        display: flex;        justify-content: space-around;        align-items: center;        margin-bottom: 1cm;    }    .logo-text {        display: flex;        align-items: center;        background-color: white;        padding: 10px;        border-radius: 5px;    }        .logo-text img {            margin-right: 10px;        }        .logo-text p {            font-size: 24px;            color: #007bff;            margin: 0;        }    .buttons {        display: flex;        gap: 10px;    }</style><div class="container">@*     <h2 class="text-center">@ViewData["Title"]</h2> *@    <div class="header-section">        <div class="logo-text">            <img src="https://files.axshare.com/gsc/5886BD/e2/ee/cb/e2eecb648f19481093d6b12d28c3beb3/images/view_user_details/u27.svg?pageId=45d84280-2bba-453f-a23a-42e8aeab14be" alt="ViewOrganization Admin Logo">            <p><strong> View Organization Details </strong></p>        </div>        <div class="buttons">            <a href="@Url.Action("Edit", new { id = Model.OrgID })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square" style="color: #74C0FC;"></i></a>            <a href="@Url.Action("ViewReSellerAdmin")" class="btn btn-secondary"><i class="fa-solid fa-circle-left"></i></a>        </div>    </div>    <div class="row justify-content-center">        <div class="col-md-10">            <div class="custom-border">                <div class="row">                    <div class="col-md-6">                        <p><strong>@Html.DisplayNameFor(model => model.OrgID):</strong> @Html.DisplayFor(model => model.OrgID)</p>                        @Html.HiddenFor(x => x.OrgID)                        <p><strong>@Html.DisplayNameFor(model => model.OrgName):</strong> @Html.DisplayFor(model => model.OrgName)</p>                        <p><strong>@Html.DisplayNameFor(model => model.OrgAdminName):</strong> @Html.DisplayFor(model => model.OrgAdminName)</p>                        <p><strong>@Html.DisplayNameFor(model => model.OrgAdminEmail):</strong> @Html.DisplayFor(model => model.OrgAdminEmail)</p>                        <p><strong>@Html.DisplayNameFor(model => model.OrgAdminMobNo):</strong> @Html.DisplayFor(model => model.OrgAdminMobNo)</p>                        <p><strong>@Html.DisplayNameFor(model => model.AddressLineOne):</strong> @Html.DisplayFor(model => model.AddressLineOne)</p>                        <p><strong>@Html.DisplayNameFor(model => model.AddressLineTwo):</strong> @Html.DisplayFor(model => model.AddressLineTwo)</p>                    </div>                    <div class="col-md-6">                        <p><strong> Country :</strong> @Html.DisplayFor(model => model.CountryName)</p>                        <p><strong>State :</strong> @Html.DisplayFor(model => model.StateName)</p>                         <p><strong>City :</strong> @Html.DisplayFor(model => model.CityName)</p>                        <p><strong>ZipCode :</strong> @Html.DisplayFor(model => model.ZipCode)</p>                        <p><strong>Organization Email:</strong> @Html.DisplayFor(model => model.OrgAdminEmail)</p>                        <p><strong>Organization Url:</strong> @Html.DisplayFor(model => model.CompanyURL)</p>                        <p><strong>EIN :</strong> @Html.DisplayFor(model => model.EIN)</p>                    </div>                </div>                <div class="text-center">                    <!-- Trigger the confirmation modal -->                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmModal">Block</button>                    <a href="@Url.Action("Index")" class="btn btn-primary">Cancel</a>                </div>            </div>                  </div>    </div></div><!-- Bootstrap modal markup --><div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">    <div class="modal-dialog" role="document">        <div class="modal-content">            <div class="modal-header">                <h5 class="modal-title" id="confirmModalLabel">Confirmation</h5>                <button type="button" class="close" data-dismiss="modal" aria-label="Close">                    <span aria-hidden="true">&times;</span>                </button>            </div>            <div class="modal-body">                Are you sure you want to block this User?            </div>            <div class="modal-footer">                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>                <button type="button" class="btn btn-danger" id="confirmBlock">OK</button>            </div>        </div>    </div></div>@section Scripts {    <script>        $(document).ready(function () {            $('#confirmBlock').click(function () {                //debugger                // Get the ID of the item to be blocked                var itemId = '@Model.OrgID';                $.ajax({                    url: '@Url.Action("Block", "OrganizationAdmin")',                    type: 'PUT',                    data: { id: itemId },                    success: function (result) {                        // Redirect to list page upon successful block                        window.location.href = '@Url.Action("ViewOrganizationAdmin", "OrganizationAdmin")';                    },                    error: function () {                                           }                });            });        });    </script>}