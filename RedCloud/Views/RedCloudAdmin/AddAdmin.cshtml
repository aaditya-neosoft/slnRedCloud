@model RedCloud.Application.Features.RedCloudAdmins.Commands.CreateRedCloudAdmin.RedCloudAdminVM;

@{
    ViewData["Title"] = "Admin User Form";
    Layout = "_Layout";
}

<style>
   
    .required::before {
        content: "*";
        color: red;
        margin-right: 3px;
    }

    .mandatory-message {
        color: red;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100" style="background-color:wheat">

    <div class="col-md-6">

        <div class="card card-primary">
            <div class="card-header bg-primary">
                <h3 class="card-title">Admin User Form</h3>
            </div>
            <div class="mandatory-message">
                * marked fields are mandatory.
            </div>
            <form asp-action="AddAdmin" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="FirstName" class="required">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-valIdation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="LastName" class="required">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-valIdation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Email" class="required">Email</label>
                        <input asp-for="Email" class="form-control" mailto:placeholder="abcxyz@redcloud.com" />
                        <span asp-valIdation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="MobileNumber" class="required">Mobile Number</label>
                        <input asp-for="MobileNumber" class="form-control" placeholder="1234567890" />
                        <span asp-valIdation-for="MobileNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" for="IsActive">Is Active</label>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-secondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValIdationScriptsPartial" />
}